<UserControl x:Class="HealthTray.Wpf.CheckControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthTray"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="320">
    <Grid Margin="10,5">
        <Image x:Name="checkStatus" HorizontalAlignment="Left" Width="60"  Height="60" VerticalAlignment="Top" Source="icons/up.ico" Margin="0,2,0,0"/>
        <Label x:Name="checkName" Content="Check Name" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Top" Width="200" Height="35" FontSize="24" FontFamily="Calibri" Foreground="White"/>
        <Label x:Name="checkLastPing" Content="Last Ping: 30 seconds ago" HorizontalAlignment="Left" Margin="65,35,0,0" VerticalAlignment="Top" Width="200" Height="33" FontSize="18" FontFamily="Calibri" Foreground="White"/>
    </Grid>
</UserControl>
