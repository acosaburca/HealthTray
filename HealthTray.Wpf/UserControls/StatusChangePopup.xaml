<UserControl x:Class="HealthTray.Wpf.StatusChangePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthTray.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="64" d:DesignWidth="196"
             Background="#282828">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="StatusImage" Width="28"  Height="28" VerticalAlignment="Center" Source="/Icons/new.ico" Margin="4"/>
        <TextBlock x:Name="StatusText" TextWrapping="WrapWithOverflow" TextTrimming="CharacterEllipsis" Grid.Column="1" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0">{Check name} changed status</TextBlock>
    </Grid>
</UserControl>
